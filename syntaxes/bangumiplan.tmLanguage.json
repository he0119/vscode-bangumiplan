{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "BangumiPlan",
	"patterns": [
		{
			"include": "#status-section"
		},
		{
			"include": "#category"
		},
		{
			"include": "#entry-line"
		},
		{
			"include": "#watch-marks"
		},
		{
			"include": "#completion-date"
		},
		{
			"include": "#note-text"
		},
		{
			"include": "#bgm-id"
		}
	],
	"repository": {
		"status-section": {
			"patterns": [
				{
					"name": "markup.heading",
					"match": "^(\\w+):",
					"captures": {
						"1": {
							"name": "markup.heading"
						}
					}
				}
			]
		},
		"category": {
			"patterns": [
				{
					"name": "markup.heading",
					"match": "^\\s{4}(\\w+):",
					"captures": {
						"1": {
							"name": "entity.name.type"
						}
					}
				}
			]
		},
		"entry-line": {
			"patterns": [
				{
					"name": "meta.entry.with-date-note",
					"match": "^(\\s{8})\\[(\\d+)\\](.+?)<([^>]+)>\\(([^)]+)\\)\\s*$",
					"captures": {
						"1": {
							"name": "punctuation.whitespace"
						},
						"2": {
							"name": "constant.numeric"
						},
						"3": {
							"name": "entity.name"
						},
						"4": {
							"name": "string.quoted"
						},
						"5": {
							"name": "comment.line"
						}
					}
				},
				{
					"name": "meta.entry.with-date",
					"match": "^(\\s{8})\\[(\\d+)\\](.+?)<([^>]+)>\\s*$",
					"captures": {
						"1": {
							"name": "punctuation.whitespace"
						},
						"2": {
							"name": "constant.numeric"
						},
						"3": {
							"name": "entity.name"
						},
						"4": {
							"name": "string.quoted"
						}
					}
				},
				{
					"name": "meta.entry.no-id-with-date-note",
					"match": "^(\\s{8})(.+?)<([^>]+)>\\(([^)]+)\\)\\s*$",
					"captures": {
						"1": {
							"name": "punctuation.whitespace"
						},
						"2": {
							"name": "entity.name"
						},
						"3": {
							"name": "string.quoted"
						},
						"4": {
							"name": "comment.line"
						}
					}
				},
				{
					"name": "meta.entry.no-id-with-date",
					"match": "^(\\s{8})(.+?)<([^>]+)>\\s*$",
					"captures": {
						"1": {
							"name": "punctuation.whitespace"
						},
						"2": {
							"name": "entity.name"
						},
						"3": {
							"name": "string.quoted"
						}
					}
				},
				{
					"name": "meta.entry.with-progress-and-note",
					"match": "^(\\s{8})\\[(\\d+)\\](.+?)( √+)\\(([^)]+)\\)\\s*$",
					"captures": {
						"1": {
							"name": "punctuation.whitespace"
						},
						"2": {
							"name": "constant.numeric"
						},
						"3": {
							"name": "entity.name"
						},
						"4": {
							"name": "markup.inserted"
						},
						"5": {
							"name": "comment.line"
						}
					}
				},
				{
					"name": "meta.entry.with-progress",
					"match": "^(\\s{8})(?:\\[(\\d+)\\])?(.+?)( √+)?\\s*$",
					"captures": {
						"1": {
							"name": "punctuation.whitespace"
						},
						"2": {
							"name": "constant.numeric"
						},
						"3": {
							"name": "entity.name"
						},
						"4": {
							"name": "markup.inserted"
						}
					}
				},
				{
					"name": "meta.entry",
					"match": "^(\\s{8})(?:\\[(\\d+)\\])?(.+?)\\s*$",
					"captures": {
						"1": {
							"name": "punctuation.whitespace"
						},
						"2": {
							"name": "constant.numeric"
						},
						"3": {
							"name": "entity.name"
						}
					}
				}
			]
		},
		"watch-marks": {
			"patterns": [
				{
					"name": "markup.inserted",
					"match": "√+",
					"captures": {
						"0": {
							"name": "markup.inserted"
						}
					}
				}
			]
		},
		"completion-date": {
			"patterns": [
				{
					"name": "string.quoted",
					"match": "<([^>]+)>",
					"captures": {
						"1": {
							"name": "string.quoted"
						}
					}
				}
			]
		},
		"note-text": {
			"patterns": [
				{
					"name": "comment.line",
					"match": "\\(([^)]+)\\)",
					"captures": {
						"1": {
							"name": "comment.line"
						}
					}
				}
			]
		},
		"bgm-id": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "\\[(\\d+)\\]",
					"captures": {
						"1": {
							"name": "constant.numeric"
						}
					}
				}
			]
		}
	},
	"scopeName": "source.bangumiplan"
}
