{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "BangumiPlan",
	"patterns": [
		{
			"include": "#status-section"
		},
		{
			"include": "#category"
		},
		{
			"include": "#entry-line"
		},
		{
			"include": "#watch-marks"
		},
		{
			"include": "#completion-date"
		},
		{
			"include": "#note-text"
		},
		{
			"include": "#bgm-id"
		}
	],
	"repository": {
		"status-section": {
			"patterns": [
				{
					"name": "markup.heading.status.bangumiplan",
					"match": "^(\\w+):",
					"captures": {
						"1": {
							"name": "entity.name.section.status.bangumiplan"
						}
					}
				}
			]
		},
		"category": {
			"patterns": [
				{
					"name": "markup.heading.category.bangumiplan",
					"match": "^\\s{4}(\\w+):",
					"captures": {
						"1": {
							"name": "entity.name.type.category.bangumiplan"
						}
					}
				}
			]
		},
		"entry-line": {
			"patterns": [
				{
					"name": "meta.entry.with-date-note.bangumiplan",
					"match": "^(\\s{8})\\[(\\d+)\\](.+?)<([^>]+)>\\(([^)]+)\\)\\s*$",
					"captures": {
						"1": {
							"name": "punctuation.whitespace.bangumiplan"
						},
						"2": {
							"name": "entity.name.function.bgm-id.bangumiplan"
						},
						"3": {
							"name": "string.entry-title.bangumiplan"
						},
						"4": {
							"name": "markup.italic.completion-date.bangumiplan"
						},
						"5": {
							"name": "comment.line.note.bangumiplan"
						}
					}
				},
				{
					"name": "meta.entry.with-date.bangumiplan",
					"match": "^(\\s{8})\\[(\\d+)\\](.+?)<([^>]+)>\\s*$",
					"captures": {
						"1": {
							"name": "punctuation.whitespace.bangumiplan"
						},
						"2": {
							"name": "entity.name.function.bgm-id.bangumiplan"
						},
						"3": {
							"name": "string.entry-title.bangumiplan"
						},
						"4": {
							"name": "markup.italic.completion-date.bangumiplan"
						}
					}
				},
				{
					"name": "meta.entry.no-id-with-date-note.bangumiplan",
					"match": "^(\\s{8})(.+?)<([^>]+)>\\(([^)]+)\\)\\s*$",
					"captures": {
						"1": {
							"name": "punctuation.whitespace.bangumiplan"
						},
						"2": {
							"name": "string.entry-title.bangumiplan"
						},
						"3": {
							"name": "markup.italic.completion-date.bangumiplan"
						},
						"4": {
							"name": "comment.line.note.bangumiplan"
						}
					}
				},
				{
					"name": "meta.entry.no-id-with-date.bangumiplan",
					"match": "^(\\s{8})(.+?)<([^>]+)>\\s*$",
					"captures": {
						"1": {
							"name": "punctuation.whitespace.bangumiplan"
						},
						"2": {
							"name": "string.entry-title.bangumiplan"
						},
						"3": {
							"name": "markup.italic.completion-date.bangumiplan"
						}
					}
				},
				{
					"name": "meta.entry.bangumiplan",
					"match": "^(\\s{8})(?:\\[(\\d+)\\])?(.+?)( √+)?\\s*$",
					"captures": {
						"1": {
							"name": "punctuation.whitespace.bangumiplan"
						},
						"2": {
							"name": "entity.name.function.bgm-id.bangumiplan"
						},
						"3": {
							"name": "string.entry-title.bangumiplan"
						},
						"4": {
							"name": "markup.inserted.watch-marks.bangumiplan"
						}
					}
				}
			]
		},
		"watch-marks": {
			"patterns": [
				{
					"name": "markup.inserted.watch-marks.bangumiplan",
					"match": "√+",
					"captures": {
						"0": {
							"name": "markup.inserted.watch-marks.bangumiplan"
						}
					}
				}
			]
		},
		"completion-date": {
			"patterns": [
				{
					"name": "markup.italic.completion-date.bangumiplan",
					"match": "<([^>]+)>",
					"captures": {
						"1": {
							"name": "markup.italic.completion-date.bangumiplan"
						}
					}
				}
			]
		},
		"note-text": {
			"patterns": [
				{
					"name": "comment.line.note.bangumiplan",
					"match": "\\(([^)]+)\\)",
					"captures": {
						"1": {
							"name": "comment.line.note.bangumiplan"
						}
					}
				}
			]
		},
		"bgm-id": {
			"patterns": [
				{
					"name": "entity.name.function.bgm-id.bangumiplan",
					"match": "\\[(\\d+)\\]",
					"captures": {
						"1": {
							"name": "markup.underline.link.bgm-id.bangumiplan"
						}
					}
				}
			]
		}
	},
	"scopeName": "source.bangumiplan"
}
