{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "BangumiPlan",
	"scopeName": "source.bangumiplan",
	"patterns": [
		{
			"include": "#header"
		},
		{
			"include": "#entry"
		}
	],
	"repository": {
		"header": {
			"patterns": [
				{
					"name": "markup.heading.section",
					"match": "^(\\w+):",
					"captures": {
						"1": {
							"name": "markup.heading"
						}
					}
				},
				{
					"name": "entity.name.type.category",
					"match": "^\\s{4}(\\w+):",
					"captures": {
						"1": {
							"name": "entity.name.type"
						}
					}
				}
			]
		},
		"entry": {
			"patterns": [
				{
					"name": "meta.entry",
					"match": "^(\\s{8})(?:\\[(\\d+)\\])?(.+?)(?:\\s*(√+))?(?:\\s*<([^>]+)>)?(?:(?:(?<=√+)|(?<=<[^>]+>))\\s*\\(([^)]+)\\))?\\s*$",
					"captures": {
						"1": {
							"name": "punctuation.whitespace"
						},
						"2": {
							"name": "constant.numeric.bgm-id"
						},
						"3": {
							"name": "entity.name.title"
						},
						"4": {
							"name": "constant.character.progress"
						},
						"5": {
							"name": "constant.other.date"
						},
						"6": {
							"name": "comment.note"
						}
					}
				}
			]
		},
		"meta": {
			"patterns": [
				{
					"name": "constant.character.progress",
					"match": "√+"
				},
				{
					"name": "constant.other.date",
					"begin": "<",
					"end": ">",
					"patterns": []
				},
				{
					"name": "comment.note",
					"begin": "\\(",
					"end": "\\)",
					"patterns": []
				},
				{
					"name": "constant.numeric.bgm-id",
					"match": "\\[(\\d+)\\]"
				}
			]
		}
	}
}
