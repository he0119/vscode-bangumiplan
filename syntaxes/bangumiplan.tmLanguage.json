{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "BangumiPlan",
	"scopeName": "source.bangumiplan",
	"patterns": [
		{
			"include": "#header"
		},
		{
			"include": "#entry"
		}
	],
	"repository": {
		"header": {
			"patterns": [
				{
					"name": "markup.heading.section",
					"match": "^(\\w+):",
					"captures": {
						"1": {
							"name": "markup.heading"
						}
					}
				},
				{
					"name": "entity.name.type.category",
					"match": "^\\s{4}(\\w+):",
					"captures": {
						"1": {
							"name": "entity.name.type"
						}
					}
				}
			]
		},
		"entry": {
			"patterns": [
				{
					"name": "meta.entry",
					"match": "^\\s{8}(?:\\[(\\d+)\\])?(.+?)(?:\\s*(?:([âˆšâ˜‘âœ…âœ“âœ”ðŸ—¸]+)|\\[æ­£åœ¨è§‚çœ‹\\s+([^\\]]+)\\])(?:\\s*\\(([^)]+)\\))?)?(?:\\s*<([\\d/\\-:\\s]+)>(?:\\s*\\(([^)]+)\\))?)?\\s*$",
					"captures": {
						"1": {
							"name": "constant.numeric.bgm-id"
						},
						"2": {
							"name": "entity.name.title"
						},
						"3": {
							"name": "string.progress"
						},
						"4": {
							"name": "string.progress-detail"
						},
						"5": {
							"name": "comment.note"
						},
						"6": {
							"name": "string.date"
						},
						"7": {
							"name": "comment.note"
						}
					}
				}
			]
		}
	}
}
